html, body, p {
	font-family: "ProximaNovaSoft-Regular", Calibri,
	        "Gill Sans", "Gill Sans MT", Candara, Segoe, "Segoe UI",
	         Arial, sans-serif;
	font-size: 110%;
}

input {
	font-size: 95%; 
}

.content-block {
	width: 50%;
	float: left;
}

@media screen and (max-width: 767px) {
	.content-block {
		width: 100%;
		float: none;
	}
}